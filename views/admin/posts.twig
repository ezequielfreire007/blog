{% extends "layout.twig" %}

{% block content %}
    <h2>Posts</h2>
    <a class="btn btn-primary" href="{{ 'admin/posts/create' | url }}">Nuevo Post</a>
    <table class="table">
        <tr>
            <th>Titulo</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
        {% for blogPost in blogPost %}
            <tr>
                <td>{{ blogPost.title }}</td>
                <td>Editar</td>
                <td>Eliminar</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}


